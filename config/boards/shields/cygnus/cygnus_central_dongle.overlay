            , <&key_physical_attrs 100 100 1150   12       0    0    0>
            , <&key_physical_attrs 100 100 1250    0       0    0    0>
            , <&key_physical_attrs 100 100 1350   12       0    0    0>
            , <&key_physical_attrs 100 100 1450   49       0    0    0>
            , <&key_physical_attrs 100 100 1550   49       0    0    0>
